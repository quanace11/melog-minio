# MinIO root credentials
MINIO_ROOT_USER=your_minio_admin
MINIO_ROOT_PASSWORD=your_strong_password

# MinIO server endpoint (for SDK/client use)
MINIO_ENDPOINT=http://localhost:9000

# MinIO bucket name (default)
MINIO_BUCKET=uploads

# CORS allowed origins (for FE upload)
MINIO_API_CORS_ALLOW_ORIGIN=http://localhost:3000

# Optional: Custom access key/secret for app (not root)
MINIO_ACCESS_KEY=your_app_access_key
MINIO_SECRET_KEY=your_app_secret_key
